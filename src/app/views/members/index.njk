{% extends "layout.njk" %}

{% block content %}
Memberstructors
<div class="card table-container">
<div class="header">

        <a class="button" href="/members/create" id="new-instructor">Novo</a>
        <form action="/members" method="get" name="filter">
            <input type="text" name="filter" placeholder="Nome ou e-mail" value={{filter}}>
            <button type="submit">Filtrar</button>
        </form>

     </div>


    <table width="100%">
        <thead>
            <tr>
                <th>Aluno</th>
                <th>Email</th> 
                <th>Ano Escolar</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
          
                <tr>    
                    <td>
                        <span style="background-image: url({{member.avatar_url}})"></span>
                      {{member.name}}    
                    </td>
                    <td>{{member.email}}</td>
                    <td> {{member.grade_school}}</td>
                    <td><a href="/members/{{member.id}}">Ver</a></td>
                    
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
      <div class="pagination" 
    data-page={{pagination.page}}
    data-total={{pagination.total}}
    data-filter={{filter}}>      
    </div>

</div>



{% endblock content %}